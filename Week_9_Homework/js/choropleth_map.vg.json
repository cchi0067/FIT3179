{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World Happiness Ranking 2015",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/cchi0067/FIT3179/main/Week_9_Homework/js/ne_110m_admin_0_countries.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/cchi0067/FIT3179/main/Week_9_Homework/data/happiness_ranking_2015.csv"
          },
          "key": "Country",
          "fields": ["Score"]
        }
      },
      {"calculate": "datum.Score", "as": "Happiness Score"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "core",
        "type": "quantitative",
        "scale": {"type": "linear"}
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "Rank", "type": "quantitative"},
        {"field": "Score", "type": "quantitative"}
      ]
    }
  }
